{
    "name": "node_webkit_app_name",
    "version": "1.0.0",
    "main": "resource/index.html",
    "single-instance": true,
    "nodejs": true,
    "node-remote": "*",
    "chromium-args": "--allow-running-insecure-content --ignore-certificate-errors --disable-web-security --enable-file-cookies",
    "window": {
        "show": true,
        "resizable": true,
        "toolbar": false,
        "frame": true,
        "position": "center",
        "fullscreen": false,
        "icon": "/icons/logo.png",
        "title": "",
        "width": 1280,
        "height": 720,
        "min_width": 1280,
        "min_height": 720
    },
    "webkit": {
        "plugin": true
    },
    "manifestUrl": "https://ip:port/node-webkit/update/package.json",
    "custom": {
        "directUrl": "",
        "maximize": false,
        "tray": ["showWindow", "delCache", "showDebug", "closeWindow"],
        "winDownloadUrl": "https://ip:port/node-webkit/update/win32/setup.exe",
        "macDownloadUrl": "https://ip:port/node-webkit/update/mac/setup.exe"
    }
}